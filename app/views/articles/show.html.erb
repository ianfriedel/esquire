<div class="container page_wrapper">
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <h3>Comments(<%= @article.comments.size %>)</h3>
  
  <%= render 'comments/form' %>
  <h4><%= link_to "Back to Posts", articles_path %></h4>
  <h4><%= link_to "Delete Post", article_path(@article), method: :delete, data: {confirm: "Are you sure?"} %></h4>
  <h4><%= link_to "Edit Post", edit_article_path(@article) %></h4>
</div>
